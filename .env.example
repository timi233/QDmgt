# Database
# SECURITY: Use strong passwords in production! Generate with: openssl rand -base64 32
# CONNECTION POOL: Adjust connection_limit based on your environment
# - Development: 5-10
# - Production: 20-50 (根据并发量调整)
DATABASE_URL=postgresql://postgres:CHANGE_ME_STRONG_PASSWORD@localhost:5432/channel_db?connection_limit=10&pool_timeout=20
POSTGRES_USER=postgres
POSTGRES_PASSWORD=CHANGE_ME_STRONG_PASSWORD
POSTGRES_DB=channel_db

# Database Performance
# LOG_ALL_QUERIES: 设置为'true'记录所有查询（仅用于调试，影响性能）
LOG_ALL_QUERIES=false

# Redis
# SECURITY: Use strong passwords in production! Generate with: openssl rand -base64 32
REDIS_URL=redis://default:CHANGE_ME_STRONG_PASSWORD@localhost:6379
REDIS_PASSWORD=CHANGE_ME_STRONG_PASSWORD

# JWT
# SECURITY: CRITICAL - Use strong secrets in production! Generate with: openssl rand -base64 64
# Example: hZKs1rtGbypBatKNdU2F3B74iQKrRyl+R9/wquPJCcYmY/ld9HkXXbtL18tRsmSwPshOimZuIjruVythcAY28g==
JWT_SECRET=CHANGE_ME_GENERATE_WITH_OPENSSL_RAND_BASE64_64
JWT_REFRESH_SECRET=CHANGE_ME_GENERATE_WITH_OPENSSL_RAND_BASE64_64
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=7d

# Server
NODE_ENV=development
PORT=4000
HOST=0.0.0.0

# CORS
CORS_ORIGIN=http://localhost:3000

# Logging
LOG_LEVEL=debug

# Frontend
VITE_API_BASE_URL=http://localhost:4000/api/v1
VITE_APP_TITLE=渠道管理系统
